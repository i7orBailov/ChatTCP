<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Client_Authorization"
        xmlns:Themes="clr-namespace:Microsoft.Windows.Themes;assembly=PresentationFramework.Aero2" x:Class="Client_Authorization.MainWindow"
        mc:Ignorable="d"
        Title="Authorization" Height="500" Width="500" ResizeMode="NoResize">
    <Grid ShowGridLines="False">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="3*"/>
        </Grid.ColumnDefinitions>
        <ComboBox x:Name="registerLogin" Grid.ColumnSpan="2" Grid.Row="0" Margin="30 30 30 30"
                  SelectedIndex="0" FontSize="30" FontFamily="Times New Roman"
                  VerticalContentAlignment="Center" HorizontalContentAlignment="Center"
                  BorderBrush="LightGray" Background="WhiteSmoke" Style="{DynamicResource ComboBoxWhiteSmokeStyle}">
            <ComboBoxItem Content="Registration"/>
            <ComboBoxItem Content="Logging"/>
        </ComboBox>
        <Image x:Name="User" Source="Resources/man.ico" RenderOptions.BitmapScalingMode="HighQuality"
               Grid.Row="1" Margin="10 10 10 10"/>
        <TextBox x:Name="nickNameField" Grid.Row="1" Grid.Column="2" Margin="0 20 20 20" MaxLength="20"
                 FontSize="30" FontFamily="Times New Roman" VerticalContentAlignment="Center" TextWrapping="NoWrap"/>
        <Image x:Name="Password" Source="Resources/password-2.ico" RenderOptions.BitmapScalingMode="HighQuality"
               Grid.Row="2" Margin="10 0 10 20"/>
        <TextBox x:Name="passwordField" Grid.Row="2" Grid.Column="2" Margin="0 20 20 20" MaxLength="20"
                 FontSize="30" FontFamily="Times New Roman" VerticalContentAlignment="Center" TextWrapping="NoWrap"/>
        <PasswordBox x:Name="HiddenPassword" PasswordChar=" " CaretBrush="White" MaxLength="5" Grid.Row="2" Grid.Column="2" Margin="0 20 20 20"/>
        <Button x:Name="Register" Content="Register" FontSize="30" FontFamily="Times New Roman"
                    Grid.ColumnSpan="2" Grid.Row="3" Margin="30 30 30 30"
                Click="Register_Click" Style="{DynamicResource ButtonWhiteSmokeStyle}"/>
    </Grid>
</Window>